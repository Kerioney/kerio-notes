<%- include("shared/header.ejs") %>

<div class="container my-5 py-5">
    <div class="col-md-5 m-auto text-center">
        <form action="/handleSignin" method="POST">
            <div class="form-group">
                <input
                    placeholder="Email"
                    name="email"
                    type="email"
                    class="form-control"
                />
            </div>
            <% if (exists.length != 0) { %>
            <div class="alert alert-danger text-center my-3">
                Email Doesn't Exist
            </div>
            <% } %>

            <div class="form-group">
                <input
                    placeholder="Password"
                    name="password"
                    type="password"
                    class="form-control"
                />
            </div>
            <% if (wrong.length != 0) { %>
            <div class="alert alert-danger text-center my-3">
                Wrong Password
            </div>
            <% } %>
            <button type="submit" class="btn btn-info w-100">SignIn</button>
        </form>
    </div>
</div>

<%- include("shared/footer.ejs") %>
